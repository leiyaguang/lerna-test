{
    "version": "independent",
    "npmClient": "yarn",
    "useWorkspaces": true,
    "packages": ["packages/*"],
    "command": {
        "version": {
            "message": "chore: publish %s",
            "conventionalCommits": true
        },
        "publish": {
            "allowBranch": "master"
        }
    },
    "ignoreChanges": ["**/__test__/**", "**/*.md"]
}
